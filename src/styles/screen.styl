@import url("//hello.myfonts.net/count/2f0a3a")


@font-face
	font-family: 'Campton-Bold'
	src: url('../webfonts/2F0A3A_0_0.eot')
	src: url('../webfonts/2F0A3A_0_0.eot?#iefix') format('embedded-opentype'),url('../webfonts/2F0A3A_0_0.woff2') format('woff2'),url('../webfonts/2F0A3A_0_0.woff') format('woff'),url('../webfonts/2F0A3A_0_0.ttf') format('truetype')


$c-bg = #F2DA9A
$c-main = #DA4027
$c-text = #000

@-ms-viewport
	width device-width

html, body
	height 100%
	cursor default

html, body, p, h1, h2, h3, pre, ul, li
	padding 0
	margin 0

body
	background $c-bg
	color $c-text
	font-family 'Open Sans', sans-serif
	font-size 16px
	font-weight 300

.content
	max-width 640px
	margin 0 5%
	text-align left

p, h1, h2, h3, pre, ul
	line-height 1.5

p, h2, h3
	margin-top 10px
	margin-bottom 20px
	line-height 1.75

ul
	padding-left 2em
	margin-top -1em
	margin-bottom 1em

a
	color $c-main
	text-decoration none
	border-bottom solid 1px rgba($c-main, .5)

	transition all ease .123s

	&:hover, &:active
		border-bottom-color rgba($c-main, .2)

h1, h2, h3
	font-family Campton-Bold
	font-weight normal

h1
	font-size 2.5em
	line-height 1.1

.maintitle
	font-size 1.3em
	font-family Campton-Bold
	line-height 1.3
	margin-bottom .6em

h2
	font-size 1.8em
	line-height 1.2
	text-transform uppercase
	color $c-main
	margin-top 4em

h3
	font-size 1.4em
	line-height 1.3
	color #000
	margin 1.5em 0 0

.header
	color $c-main
	max-width 640px
	margin 0 5%
	padding 50px 0 20px

.navigation
	margin-bottom 3em
	font-family Campton-Bold
	text-transform uppercase
	line-height 2.5
	a
		margin-right 1.5em
		font-size 16px
		&:after
			content " ↓"
		&.next-site:after
			content " →"

.part
	margin-bottom 40px

.footer
	max-width 640px
	margin 0 5%
	padding-bottom 60px
	p
		line-height 1.2
		font-size 14px

@media only screen and (min-width: 640px)
	body
		font-size 20px
	.part
		margin-bottom 80px
	.maintitle
		font-size 2em
	.header, .content, .footer
		margin 0 10%

body.akumulator
	background #edeee8
	h1
		color #000
		font-size 3.5em
	h2, a, .maintitle
		color #7c9e0b
	.navigation a
		color #000
		border-bottom-color #bbb
		font-size 13px
	.header
		max-width 670px

.organizer.gef
	margin-bottom 40px
	max-width 80px

.event
	display block
	margin-bottom 2em
	padding-bottom 1.5em
	border-bottom 3px solid #fff
